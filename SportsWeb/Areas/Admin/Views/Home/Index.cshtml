@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Management Section</h1>
</div>

<div class="container mt-5">
    <div class="row text-center">
        <!-- Box for Products -->
        <div class="col-md-2 offset-md-1">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title">Manage Products</h5>
                    <a href="/Admin/Products" class="btn btn-primary mt-3">Go</a>
                </div>
            </div>
        </div>

        <!-- Box for Categories -->
        <div class="col-md-2">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title">Manage Categories</h5>
                    <a href="/Admin/Categories" class="btn btn-primary mt-3">Go</a>
                </div>
            </div>
        </div>

        <!-- Box for Bills -->
        <div class="col-md-2">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title">Manage Bills</h5>
                    <a href="/Admin/Bills" class="btn btn-primary mt-3">Go</a>
                </div>
            </div>
        </div>

        <!-- Box for Accounts -->
        <div class="col-md-2">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title">Manage Accounts</h5>
                    <a href="/Admin/Accounts" class="btn btn-primary mt-3">Go</a>
                </div>
            </div>
        </div>

        <!-- Box for Stock -->
        <div class="col-md-2">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="card-title">Stock Levels</h5>
                    <a href="/Admin/Stock" class="btn btn-primary mt-3">Go</a>
                </div>
            </div>
        </div>
    </div>
</div>